#!/bin/bash
sed -i "s+# FREETZ_PACKAGE_AUTOFS is not set+FREETZ_PACKAGE_AUTOFS=y+g" $FREETZ_SSL_HOME_PATH/.config
sed -i "s+# FREETZ_REPLACE_KERNEL is not set+FREETZ_REPLACE_KERNEL=y+g" $FREETZ_SSL_HOME_PATH/.config

ed $FREETZ_SSL_HOME_PATH/.config <<EOF
/FREETZ_PACKAGE_AUTOFS=y/a
FREETZ_PACKAGE_AUTOFS_NFS=y
FREETZ_PACKAGE_AUTOFS_CIFS=y
FREETZ_PACKAGE_AUTOFS_CURLFTPFS=y
FREETZ_PACKAGE_AUTOFS_DAVFS2=y
FREETZ_PACKAGE_AUTOFS_SSHFS=y
.
wq
EOF
