#!/bin/bash

# Disable Apache2 in the .config file
sed -i "s+FREETZ_PACKAGE_APACHE2=y+# FREETZ_PACKAGE_APACHE2 is not set+g" "$FREETZ_SSL_HOME_PATH/.config"

# Remove all unwanted Apache2-related configurations in one pass
grep -Ev 'FREETZ_PACKAGE_APACHE2_DEFLATE|FREETZ_PACKAGE_APACHE2_SSL|FREETZ_PACKAGE_APACHE2_LIBXML|FREETZ_PACKAGE_APACHE2_COMPILEINMODS|FREETZ_PACKAGE_APACHE2_STATIC|FREETZ_LIB_libapr_WITH_DSO|FREETZ_LIB_libxml2_WITH_HTML' \
"$FREETZ_SSL_HOME_PATH/.config" > "$FREETZ_SSL_HOME_PATH/tempdatei" && mv "$FREETZ_SSL_HOME_PATH/tempdatei" "$FREETZ_SSL_HOME_PATH/.config"
