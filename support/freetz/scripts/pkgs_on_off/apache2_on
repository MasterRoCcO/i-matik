#!/bin/bash

# Replace '# FREETZ_PACKAGE_APACHE2 is not set' with 'FREETZ_PACKAGE_APACHE2=y'
sed -i "s+# FREETZ_PACKAGE_APACHE2 is not set+FREETZ_PACKAGE_APACHE2=y+g" "$FREETZ_SSL_HOME_PATH/.config"

# Append additional configurations after 'FREETZ_PACKAGE_APACHE2=y'
sed -i '/FREETZ_PACKAGE_APACHE2=y/a \
FREETZ_PACKAGE_APACHE2_DEFLATE=y\n\
FREETZ_PACKAGE_APACHE2_SSL=y\n\
FREETZ_PACKAGE_APACHE2_LIBXML=y\n\
FREETZ_PACKAGE_APACHE2_COMPILEINMODS=y\n\
FREETZ_PACKAGE_APACHE2_STATIC=y' "$FREETZ_SSL_HOME_PATH/.config"
