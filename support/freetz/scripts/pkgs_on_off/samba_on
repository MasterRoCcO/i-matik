#!/bin/bash
sed -i "s+# FREETZ_PACKAGE_SAMBA is not set+FREETZ_PACKAGE_SAMBA=y+g" $FREETZ_SSL_HOME_PATH/.config
sed -i "s+# FREETZ_LIB_libpopt is not set+FREETZ_LIB_libpopt=y+g" $FREETZ_SSL_HOME_PATH/.config
ed $FREETZ_SSL_HOME_PATH/.config <<EOF
/FREETZ_PACKAGE_SAMBA=y/a
FREETZ_PACKAGE_SAMBA=y
# FREETZ_SAMBA_VERSION_3_0 is not set
FREETZ_SAMBA_VERSION_3_6=y
FREETZ_PACKAGE_SAMBA_SMBD=y
# FREETZ_PACKAGE_SAMBA_NMBD is not set
# FREETZ_PACKAGE_SAMBA_SMBCLIENT is not set
# FREETZ_PACKAGE_SAMBA_NMBLOOKUP is not set
FREETZ_PACKAGE_SAMBA_MAX_DEBUG_LEVEL=-1
.
wq
EOF
