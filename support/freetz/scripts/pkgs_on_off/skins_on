#!/bin/bash

enable_skins() {
	local skins=(
		"FREETZ_SKIN_newfreetz"
		"FREETZ_SKIN_phoenix"
		"FREETZ_SKIN_cuma"
	)

	local packages=(
		"FREETZ_PACKAGE_SKIN_DIGITAL_ELITEBOARD"
		"FREETZ_PACKAGE_SKIN_KEYWELT"
		"FREETZ_PACKAGE_SKIN_NACHTFALKE"
		"FREETZ_PACKAGE_SKIN_NACHTFALKE_OLD"
		"FREETZ_PACKAGE_SKIN_PRISRAK"
		"FREETZ_PACKAGE_SKIN_PRISRAK1"
	)

	for skin in "${skins[@]}"; do
		sed -i "s+# $skin is not set+$skin=y+g" "$FREETZ_SSL_HOME_PATH/.config" 2>/dev/null
	done

	for package in "${packages[@]}"; do
		sed -i "s+# $package is not set+$package=y+g" "$FREETZ_SSL_HOME_PATH/.config" 2>/dev/null
	done
}

if [ -n "$PARAM_SKINS" ]; then
	enable_skins
fi

if [ -n "$PARAM_SKINS1" ]; then
	enable_skins
fi
