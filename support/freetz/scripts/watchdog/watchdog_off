#!/bin/bash

# Update .config using sed
sed -i -e "s+FREETZ_USER_LEVEL_EXPERT=y+# FREETZ_USER_LEVEL_EXPERT is not set+g" \
	-e "s+# FREETZ_USER_LEVEL_DEVELOPER is not set+FREETZ_USER_LEVEL_DEVELOPER=y+g" \
	-e "/FREETZ_SHOW_EXPERT=y/a\
FREETZ_SHOW_DEVELOPER=y" \
	-e "/# FREETZ_DISABLE_SERIAL_CONSOLE is not set/a\
FREETZ_PATCH_DISABLE_AVM_WATCHDOG=y" \
	"$FREETZ_SSL_HOME_PATH/.config"
